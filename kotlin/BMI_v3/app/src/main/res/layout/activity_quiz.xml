<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Quiz">


    <Button
        android:id="@+id/answear4"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:gravity="center"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="500dp"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/answear3"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Button"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/answear4"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="450dp"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/answear2"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:text="Button"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/answear3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="400dp"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/answear1"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/answear2"
        android:layout_marginTop="350dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/score"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="TextView"
        android:textSize="24dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/question"
        android:layout_width="406dp"
        android:layout_height="300dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score" />



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/colorPrimary"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>